        <Button Content="Konkurencje" HorizontalAlignment="Left" Height="89" Margin="680,298,0,0" VerticalAlignment="Top" Width="258" Click="Button_Click_3" FontWeight="Bold" FontSize="24" Background="#FF289DFF" Foreground="#FF0F0F2D">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
                        CornerRadius="40"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Wyniki" HorizontalAlignment="Left" Height="89" Margin="371,449,0,0" VerticalAlignment="Top" Width="258" Click="Button_Click_4" FontWeight="Bold" FontSize="24" Background="#FFFF4C70" Foreground="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
                        CornerRadius="40"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
